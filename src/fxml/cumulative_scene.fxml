<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>

<ScrollPane fx:controller="CumulativeController" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED" fitToWidth="true" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" styleClass="root-grid">
   <content>

      <GridPane alignment="CENTER" >
         <columnConstraints>
            <ColumnConstraints hgrow="ALWAYS" />
         </columnConstraints>
   
         <rowConstraints>
            <RowConstraints valignment="TOP" vgrow="NEVER" />
            <RowConstraints valignment="CENTER" vgrow="ALWAYS" />
            <RowConstraints valignment="BOTTOM"  vgrow="NEVER" />
         </rowConstraints>
   

         <children>
            <GridPane GridPane.rowIndex="0">
               <columnConstraints>
                  <ColumnConstraints hgrow="ALWAYS" />
               </columnConstraints>

               <rowConstraints>
                  <RowConstraints valignment="TOP" vgrow="NEVER"  />
                  <RowConstraints valignment="CENTER" vgrow="NEVER"  />
               </rowConstraints>

               <children>
                  <Button fx:id="backButton" onAction="#backButtonPress" text="Back" GridPane.rowIndex="0" styleClass="button" />
                  <VBox alignment="CENTER" GridPane.rowIndex="1">
                     <children>
                        <Text text="Grade Calculator" styleClass="title-text" />
                     </children>
                  </VBox>
               </children>
            </GridPane>

            <GridPane fx:id="cumlativePointsInput" hgap="10.0" vgap="15.0" alignment="TOP_LEFT" GridPane.rowIndex="1">
               <columnConstraints>
                  <ColumnConstraints hgrow="ALWAYS" halignment="CENTER" />
                  <ColumnConstraints hgrow="ALWAYS" halignment="CENTER"  />
                  <ColumnConstraints hgrow="ALWAYS" halignment="CENTER"  />
                  <ColumnConstraints hgrow="ALWAYS" halignment="CENTER"  />
               </columnConstraints>

               <rowConstraints>
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
               </rowConstraints>

               <children>
                  <Label text="Assignment Name" GridPane.rowIndex="0" GridPane.columnIndex="0" styleClass="subtitle-text" />
                  <TextField fx:id="enterAssignmentName" promptText="e.g. Test 1, Global Project" prefWidth="250.0" GridPane.rowIndex="1" GridPane.columnIndex="0" styleClass="input-field" />

                  <Label text="Points Earned" GridPane.rowIndex="0" GridPane.columnIndex="1" styleClass="subtitle-text" />
                  <TextField fx:id="enterPointsEarned" promptText="e.g., 2.0, 23.5, 78, 100" prefWidth="250.0" GridPane.rowIndex="1" GridPane.columnIndex="1" styleClass="input-field" />

                  <Text text="/" styleClass="subtitle-text" GridPane.rowIndex="1" GridPane.columnIndex="2" />

                  <Label text="Possible Points" GridPane.rowIndex="0" GridPane.columnIndex="3" styleClass="subtitle-text" />
                  <TextField fx:id="enterPossiblePoints" promptText="e.g., 2.0, 23.5, 78, 100" prefWidth="250.0" GridPane.rowIndex="1" GridPane.columnIndex="3" styleClass="input-field" />
         
                  <Button fx:id="addAnotherAssignment" text="&#43; Add Another Assignment" onAction="#addAnotherAssignmentPress"  GridPane.rowIndex="2"  GridPane.columnIndex="0" styleClass="weight-button" />
               </children>

               <padding>
                  <Insets top="20.0" bottom="20.0" />
               </padding>
            </GridPane>

            <Button fx:id="calculateButton" onAction="#calculateButtonPress" text="Calculate Your Grade" GridPane.halignment="CENTER" GridPane.rowIndex="2" styleClass="button"/>
         </children>

         <padding>
            <Insets top="20.0" right="50.0" bottom="20.0" left="50.0" />
         </padding>
      </GridPane>
   </content>
</ScrollPane>