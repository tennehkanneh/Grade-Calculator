<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>

<ScrollPane fx:controller="WeightedController" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED" fitToWidth="true" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" styleClass="root-grid">
   <content>

      <GridPane alignment="CENTER" >
         <columnConstraints>
            <ColumnConstraints hgrow="ALWAYS" />
         </columnConstraints>
   
         <rowConstraints>
            <RowConstraints valignment="TOP" vgrow="NEVER" />
            <RowConstraints valignment="CENTER" vgrow="ALWAYS" />
            <RowConstraints valignment="BOTTOM"  vgrow="NEVER" />
         </rowConstraints>
   

         <children>
            <GridPane GridPane.rowIndex="0">
               <columnConstraints>
                  <ColumnConstraints hgrow="ALWAYS" />
               </columnConstraints>

               <rowConstraints>
                  <RowConstraints valignment="TOP" vgrow="NEVER"  />
                  <RowConstraints valignment="CENTER" vgrow="NEVER"  />
               </rowConstraints>

               <children>
                  <Button fx:id="backButton" onAction="#backButtonPress" text="Back" GridPane.rowIndex="0" styleClass="button" />
                  <VBox alignment="CENTER" GridPane.rowIndex="1">
                     <children>
                        <Text text="Grade Calculator" styleClass="title-text" />
                        
                        <HBox alignment="CENTER">
                           <Label text="Finale Grade:" styleClass="input-label" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                           <Text fx:id="finaleGrade" text="--" GridPane.rowIndex="2" GridPane.columnIndex="1" styleClass="subtitle-text" />
                        </HBox>
                     </children>
                  </VBox>
               </children>
            </GridPane>

            <GridPane fx:id="gradeWeightsInput" hgap="10.0" vgap="15.0" alignment="TOP_LEFT" GridPane.rowIndex="1">
               <columnConstraints>
                  <ColumnConstraints hgrow="ALWAYS" halignment="CENTER" />
                  <ColumnConstraints hgrow="ALWAYS" halignment="CENTER"  />
                  <ColumnConstraints hgrow="ALWAYS" halignment="CENTER"  />
               </columnConstraints>

               <rowConstraints>
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
               </rowConstraints>

               <children>
                  <Label text="Weight Category" GridPane.rowIndex="0" GridPane.columnIndex="0" styleClass="subtitle-text" />
                  <TextField fx:id="enterWeightCategory" id="enterWeightCategory-0" promptText="e.g. Test 1, Global Project" prefWidth="250.0" GridPane.rowIndex="1" GridPane.columnIndex="0" styleClass="input-field" />

                  <Label text="Percentage of Grade" GridPane.rowIndex="0" GridPane.columnIndex="1" styleClass="subtitle-text" />
                  <TextField fx:id="enterPercentageOfGrade" id="enterPercentageOfGrade-0" promptText="e.g., 2.0, 23.5, 78, 100" prefWidth="250.0" GridPane.rowIndex="1" GridPane.columnIndex="1" styleClass="input-field" />

                  <Text text="%" styleClass="subtitle-text" GridPane.rowIndex="1" GridPane.columnIndex="2" />
         
                  <Button fx:id="addAnotherWeightCategoryButton" text="&#43; Add Another Weight Category" onAction="#addAnotherAssignmentButtonPress"  GridPane.rowIndex="2"  GridPane.columnIndex="0" styleClass="weight-button" />
               </children>

               <padding>
                  <Insets top="20.0" bottom="20.0" />
               </padding>
            </GridPane>

            <GridPane fx:id="gradesInput" hgap="10.0" vgap="15.0" alignment="TOP_LEFT" GridPane.rowIndex="1">
               <columnConstraints>
                  <ColumnConstraints hgrow="ALWAYS" halignment="CENTER" />
                  <ColumnConstraints hgrow="ALWAYS" halignment="CENTER" />
                  <ColumnConstraints hgrow="ALWAYS" halignment="CENTER"  />
                  <ColumnConstraints hgrow="ALWAYS" halignment="CENTER"  />
                  <ColumnConstraints hgrow="ALWAYS" halignment="CENTER"  />
               </columnConstraints>

               <rowConstraints>
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
               </rowConstraints>

               <children>
                  <Label text="Category" GridPane.rowIndex="0" GridPane.columnIndex="0" styleClass="subtitle-text" />
                  <ComboBox fx:id="myComboBox" prefWidth="250.0" GridPane.rowIndex="1" GridPane.columnIndex="0" styleClass="combo-box">
                     <items>
                        <FXCollections fx:factory="observableArrayList">
                           <String fx:value="Item 1" />
                           <String fx:value="Item 2" />
                           <String fx:value="Item 3" />
                        </FXCollections>
                     </items>
                  </ComboBox>
                  
                  <Label text="Assignment Name" GridPane.rowIndex="0" GridPane.columnIndex="1" styleClass="subtitle-text" />
                  <TextField fx:id="enterAssignmentName" id="enterAssignmentName-0" promptText="e.g. Test 1, Global Project" prefWidth="250.0" GridPane.rowIndex="1" GridPane.columnIndex="0" styleClass="input-field" />

                  <Label text="Points Earned" GridPane.rowIndex="0" GridPane.columnIndex="2" styleClass="subtitle-text" />
                  <TextField fx:id="enterPointsEarned" id="enterPointsEarned-0" promptText="e.g., 2.0, 23.5, 78, 100" prefWidth="250.0" GridPane.rowIndex="1" GridPane.columnIndex="1" styleClass="input-field" />

                  <Text text="/" styleClass="subtitle-text" GridPane.rowIndex="1" GridPane.columnIndex="3" />

                  <Label text="Possible Points" GridPane.rowIndex="0" GridPane.columnIndex="4" styleClass="subtitle-text" />
                  <TextField fx:id="enterPossiblePoints" id="enterPossiblePoints-0" promptText="e.g., 2.0, 23.5, 78, 100" prefWidth="250.0" GridPane.rowIndex="1" GridPane.columnIndex="3" styleClass="input-field" />
         
                  <Button fx:id="addAnotherAssignmentButton" text="&#43; Add Another Assignment" onAction="#addAnotherAssignmentButtonPress"  GridPane.rowIndex="2"  GridPane.columnIndex="0" styleClass="weight-button" />
               </children>

               <padding>
                  <Insets top="20.0" bottom="20.0" />
               </padding>
            </GridPane>

            <Button fx:id="calculateButton" onAction="#calculateButtonPress" text="Calculate Your Grade" GridPane.halignment="CENTER" GridPane.rowIndex="2" styleClass="button"/>
         </children>

         <padding>
            <Insets top="20.0" right="50.0" bottom="20.0" left="50.0" />
         </padding>
      </GridPane>
   </content>
</ScrollPane>