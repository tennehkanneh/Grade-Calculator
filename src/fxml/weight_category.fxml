<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane fx:controller="WeightCategoryController"  gridLinesVisible="true" alignment="CENTER" prefHeight="650.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <columnConstraints>
      <ColumnConstraints hgrow="ALWAYS" />
   </columnConstraints>
   
   <rowConstraints>
      <RowConstraints valignment="TOP" prefHeight="250.0" />
      <RowConstraints valignment="CENTER" prefHeight="380.0" />
      <RowConstraints valignment="CENTER" prefHeight="300.0" />
      <RowConstraints valignment="TOP" prefHeight="230.0"/>
   </rowConstraints>

   <children>
      <Button fx:id="backButton" onAction="#backButtonPress" text="BACK" GridPane.halignment="LEFT" GridPane.valignment="TOP">
         <font>
            <Font name="American Typewriter" size="16.0" />
         </font>
      </Button>

      <Text text="Grade Calculator" GridPane.halignment="CENTER" GridPane.valignment="TOP">
         <font>
            <Font name="American Typewriter Bold" size="60.0" />
         </font>
      </Text>

      <VBox alignment="TOP_LEFT" spacing="20.0" GridPane.rowIndex="1">
         <Text fill="#00000066" text="$nameInput what are you Grade Categories:">
            <font>
               <Font name="Courier New" size="20.0" />
            </font>
         </Text>

      </VBox>
   </children>

   <padding>
      <Insets top="5.0" right="10.0" bottom="5.0" left="10.0" />
   </padding>
</GridPane>